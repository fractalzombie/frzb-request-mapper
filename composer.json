{
    "name": "frzb/request-mapper",
    "type": "library",
    "description": "The RequestMapper component allows you to serialize JSON request to Request class and validate it",
    "keywords": [
        "library",
        "symfony",
        "component",
        "dependency",
        "injection",
        "validation",
        "serialize",
        "serializer",
        "mapper",
        "request",
        "request-mapper",
        "frzb"
    ],
    "homepage": "https://github.com/fractalzombie/frzb-request-mapper",
    "license": "MIT",
    "authors": [
        {
            "name": "Mykhailo Shtanko",
            "email": "fractalzombie@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/container": "^1.1.1|^2.0",
        "symfony/dependency-injection": "^5.4|^6",
        "symfony/deprecation-contracts": "^2.4",
        "symfony/http-kernel": "^5.4|^6",
        "symfony/framework-bundle": "^v5.4|^6.0",
        "symfony/service-contracts": "^1.1.6|^2|^3",
        "symfony/serializer-pack": "^1.0.4",
        "symfony/validator": "^5.4|^6",
        "symfony/event-dispatcher": "^5.4|^6",
        "frzb/dependency-injection": "^1.1.1",
        "symfony/yaml": "^5.4|^6",
        "symfony/form": "^5.4|^6",
        "laravel/helpers": "^1.5",
        "frzb/php-doc-reader": "^1.0",
        "symfony/property-access": "^6.1",
        "symfony/uid": "^6.1"
    },
    "require-dev": {
        "symfony/config": "^5.4|^6",
        "symfony/expression-language": "^5.4|^6",
        "phpunit/phpunit": "^10.0",
        "phpunit/php-code-coverage": "^10.0",
        "php-coveralls/php-coveralls": "^2.5",
        "symfony/phpunit-bridge": "^5.4|^6",
        "friendsofphp/php-cs-fixer": "^3.9",
        "symfony/test-pack": "^1.0.10"
    },
    "autoload": {
        "psr-4": {
            "FRZB\\Component\\RequestMapper\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "scripts": {
        "test": [
            "@php -r \"file_exists('var/tests') || mkdir('var/tests', recursive: true);\"",
            "php vendor/bin/phpunit --colors=always --configuration phpunit.xml.dist --log-junit var/tests/.phpunit.output.xml"
        ],
        "test-coverage": [
            "@php -r \"file_exists('var/tests') || mkdir('var/tests', recursive: true);\"",
            "php -n -dzend_extension=xdebug -dxdebug.mode=coverage vendor/bin/phpunit --colors=always --configuration phpunit.xml.dist --log-junit var/tests/.phpunit.output.xml --coverage-html var/tests/coverage --coverage-clover var/tests/coverage/coverage.xml"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*||6.0.*||6.1.*||6.2.*"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
